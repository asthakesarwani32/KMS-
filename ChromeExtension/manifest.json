{
  "manifest_version": 3,
  "name": "KnowMyStatus - Teacher Quick Update",
  "version": "1.0.1",
  "description": "Quick status and profile updates for teachers using KnowMyStatus platform",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://knowmystatus-kms.onrender.com/*",
    "https://knowmystatus.vercel.app/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "KnowMyStatus - Quick Update",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
